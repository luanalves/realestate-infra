{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Listen for Xdebug with Session",
            "type": "php",
            "request": "launch",
            "port": 9004,
            "pathMappings": {
                "/var/www/html": "/opt/homebrew/var/www/realestate/realestate-app"
            },
            "ignore": [
                "**/vendor/**/*.php"
            ],
            "xdebugSettings": {
                "max_children": 128,
                "max_data": 1024,
                "max_depth": 1
            }
        }
    ]
}